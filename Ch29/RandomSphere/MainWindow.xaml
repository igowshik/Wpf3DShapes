<Window x:Class="RandomSphere.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomSphere"
        mc:Ignorable="d"
        Title="RandomSphere"
        Height="400" Width="400"
        Loaded="Window_Loaded">
    <Grid Name="mainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Name="GenerateButton" Content="Generate"
            Width="70" Margin="0,5,0,0" Click="GenerateButton_Click"/>
        <Border Grid.Row="1" Name="MainBorder" Background="White">
            <Viewport3D Name="mainViewport"/>
        </Border>
    </Grid>
</Window>
